<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="编辑"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.pysun.flowlayout.FlowLayout
        android:id="@+id/fl_label_edit"
        android:layout_width="0dp"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit">

    </com.pysun.flowlayout.FlowLayout>

    <com.pysun.flowlayout.FlowLayout
        android:id="@+id/fl_label_spread"
        android:layout_width="0dp"
        android:background="#112233"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_label_edit">

    </com.pysun.flowlayout.FlowLayout>

    <com.pysun.flowlayout.FlowLayout
        android:id="@+id/fl_label_spread_inside"
        android:layout_width="0dp"
        android:background="@color/colorAccent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_label_spread">

    </com.pysun.flowlayout.FlowLayout>


</android.support.constraint.ConstraintLayout>